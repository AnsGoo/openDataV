{
  "name": "open-data-v",
  "version": "0.0.0",
  "scripts": {
    "bootstrap": "pnpm install",
    "dev": "npm -C examples run dev",
    "build": "npm -C examples run build",
    "build:lib": "pnpm recursive run build:lib",
    "lint": "eslint --ext .js,.ts,.vue,.tsx packages/base/src packages/ui/src packages/scripts/src packages/data/src packages/designer/src  examples/src resource/",
    "lint:fromat": "prettier -c --parser typescript \"{packages,__tests__,e2e}/**/*.[jt]s?(x)\"",
    "lint:fix": "eslint --fix --ext .js,.ts,.vue,.tsx packages/base/src packages/ui/src packages/scripts/src packages/data/src packages/designer/src examples/ resource/",
    "prepare": "husky install",
    "reinstall": "rimraf pnpm-lock.yaml && rimraf packages/**/node_modules && rimraf examples/node_modules && rimraf node_modules && pnpm bootstrap",
    "publish": "pnpm publish -r"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^16.18.121",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-define-config": "^1.24.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-spellcheck": "^0.0.20",
    "eslint-plugin-vue": "^9.31.0",
    "husky": "^7.0.4",
    "less": "^4.2.1",
    "postcss": "^8.4.49",
    "postcss-html": "^1.7.0",
    "postcss-less": "^6.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "stylelint": "^15.11.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "tailwindcss": "^3.4.15",
    "terser": "^5.36.0",
    "typescript": "^4.9.5",
    "vite": "^5.4.11",
    "vite-plugin-dts": "^3.9.1",
    "vue-eslint-parser": "^7.11.0",
    "vue-tsc": "^1.8.27"
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 2,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "semi": false,
    "endOfLine": "lf"
  }
}
